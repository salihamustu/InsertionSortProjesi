package Homework;

import java.util.Scanner;
public class GradePointAverageCalculation {
    public static void main(String[] args) {
        // Creat Veriable
        int Math, Physics, Chemistry, History, Turkish, Music ;

        // We Defined Our Scanner Class
        Scanner inp = new Scanner(System.in);

        // Get Voules From User
        System.out.print("Enter Your Math Grade : ");
        Math = inp.nextInt();

        System.out.print("Enter Your Physics Grade : ");
        Physics = inp.nextInt();

        System.out.print("Enter Your Chemistry Grade : ");
        Chemistry = inp.nextInt();

        System.out.print("Enter Your History Grade : ");
        History = inp.nextInt();

        System.out.print("Enter Your Turkish Grade : ");
        Turkish = inp.nextInt();

        System.out.print("Enter Your Music Grade : ");
        Music = inp.nextInt();

        int total = (Math+Physics+Chemistry+History+Turkish+Music);
        double average = total / 6 ;
        System.out.println("Your Average : "+ average);

        System.out.println(average > 60? "Passed The Class" : "Failed The Class");

    }
}

